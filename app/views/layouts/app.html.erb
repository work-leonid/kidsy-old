      <div class="flex items-center h-full">
        <div>
        <h3 class="mb-5 font-light text-2xl">What you want to do today?</h3>

        <%= link_to todo_items_path, class: "flex hover:opacity-70 duration-300 transition-all mb-2 items-center gap-3" do %>
          <svg class="w-5 h-5 opacity-60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
