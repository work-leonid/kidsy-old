  </svg>
<% end %>
  <% end %>

  </div>

  <div class="w-full p-8 bg-purple-50 rounded-xl mt-6">
    <%= form.file_field :pictures, multiple: true %>
  </div>

  <div class="flex flex-col gap-1 mt-3">
    <%= form.text_field :title, placeholder: "You could add a title", class: "text-xl font-bold  outline-none border-0 focus:bg-slate-50 py-3 focus:ring-0 rounded-xl placeholder:text-slate-400" %>
  </div>
  <div class="flex flex-col gap-1 mt-2">
    <%= form.text_area :body, rows: 4, placeholder: 'Memory', class: "text-4xl font-light leading-tight font-serif outline-none border-0 focus:bg-slate-50 py-3 focus:ring-0 rounded-xl placeholder:text-slate-400" %>
  </div>

  <div class="flex justify-between mt-8 gap-8">
    <%= link_to raw('&larr; Back'), journal_items_path, class: "py-4 px-5 hover:text-purple-500 durateion-300 transition-all font-medium" %>
    <%= form.submit 'Our memory', class: "rounded-xl py-4 px-8 bg-purple-500 hover:bg-purple-600 transition-all duration-300 text-white inline-flex font-medium cursor-pointer" %>
  </div>
<% end %>
