<%= form_with(model: journal_item, class: "contents") do |form| %>
  <% if journal_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(journal_item.errors.count, "error") %> prohibited this journal_item from being saved:</h2>

      <ul>
        <% journal_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.label :pictures %>
    <%= form.file_field :pictures, multiple: true %>
  </div>

<div>
  <%= form.label "Tags" %>
  <%= form.text_field :tag_list, value: @journal_item.send(:tag_list).to_s, placeholder: 'rails, development' %>
  <%#= form.select :tag_list, ActsAsTaggableOn::Tag.pluck(:name, :id), {}, { multiple: true, data: { controller: 'slim', slim_target: 'field', class: "w-full bg-red-100" } } %>
</div>

  <div class="my-5">
    <%= form.label :published_at %>
    <%= form.date_field :published_at, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
