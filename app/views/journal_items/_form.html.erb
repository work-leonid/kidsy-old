    <%= form.date_field :published_at, class: "border-0 focus:ring-0 text-slate-800 placeholder:text-slate-400" %>
  </div>

  <% if action_name == "edit" %>
<%= link_to journal_item_path(journal_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-slate-400 hover:text-rose-500 duration-300 transition-all" do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 256 256">
    <path d="M200,56V208a8,8,0,0,1-8,8H64a8,8,0,0,1-8-8V56Z" opacity="0.2"></path>
