<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex gap-16">
      <div>
    <div class="flex sticky top-8 flex-col gap-5">
        <% all_tags = @journal_items.tag_counts_on(:tags) %>
        <a href="<%= journal_items_path %>" class="text-blue-500">All</a> <!-- Show all posts -->
        <% all_tags.each do |tag| %>
          <%= link_to journal_items_path(tag: tag.name), class: "text-blue-500" do %>
            <%= tag.name %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="flex-1">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Journal items</h1>
      <%= link_to 'New journal item', new_journal_item_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <div id="journal_items" class="min-w-full">
      <%= render @journal_items %>
    </div>
    </div>
  </div>
</div>
