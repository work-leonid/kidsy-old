<%= content_for :subnav do %>
  <% I18n.t("date.month_names").compact.each_with_index do |month, index| %>
    <%= link_to month, journal_items_path(month: index + 1), class: "text-lg hover:text-purple-500" %>
  <% end %>
<% end %>

<div class="max-w-4xl mx-auto pb-40">
  <h1 class="font-bold max-w-lg mb-20 text-2xl">Hey, Leonid! Remember what happens in <%= @current_month_name %>?</h1>

  <%= link_to new_journal_item_path, class: "fixed bottom-8 right-4  bg-purple-500 px-12 py-4 text-center rounded-2xl z-50  hover:bg-purple-600 duration-300 transition-all text-center  text-xl font-semibold ring-4 ring-purple-400/60 inline-flex items-center gap-2 hover:scale-110  text-white ", data: { turbo_frame: :modal} do %>
