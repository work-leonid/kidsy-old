<%= content_for :subnav do %>
  <% I18n.t("date.month_names").compact.each_with_index do |month, index| %>
    <%= link_to month, journal_items_path(month: index + 1), class: "text-lg hover:text-purple-500" %>
  <% end %>
<% end %>

<div class="max-w-4xl mx-auto pb-40">
  <h1 class="font-bold mb-12 text-2xl">Memories in <%= @current_month_name %></h1>

  <%= link_to 'Write memory', new_journal_item_path, class: "fixed bottom-8 right-4  bg-purple-500 px-12 py-5 text-center rounded-2xl z-50  hover:bg-purple-600 duration-300 transition-all text-center  text-2xl font-medium  text-white ", data: { turbo_frame: :modal} %>

  <% if @journal_items.empty? %>
    <p class="grid place-items-center h-full">Add memory about your or your beautiful family</p>
  <% else %>
    <div id="journal_items" class="w-full flex flex-col gap-32">
      <%= render @journal_items %>
    </div>
  <% end %>

  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
