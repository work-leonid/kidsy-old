    Add memory
  <% end %>

  <% if @journal_items.empty? %>
    <p class="grid place-items-center h-full">Add memory about your or your beautiful family</p>
  <% else %>
    <div id="journal_items" class="w-full flex flex-col gap-32">
      <%= render @journal_items %>
    </div>
  <% end %>

  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
