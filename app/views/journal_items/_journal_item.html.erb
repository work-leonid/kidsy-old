<div id="<%= dom_id journal_item %>" class="w-full  transition-all duration-300 rounded-2xl">

  <% unless journal_item.pictures.empty? %>
    <% if journal_item.pictures.count == 1 %>

      <div class="flex w-full flex-col items-center justify-center self-start gap-4 ">
        <% journal_item.pictures.each_with_index do |picture, index| %>
          <%= link_to picture do %>
            <%= image_tag journal_item.pictures_as_thumbnail(picture), class: "hover:scale-100 transition-all duration-300 -mt-8 shrink-0 #{index.odd? ? 'rotate-6' : '-rotate-2'}" %>
          <% end %>
        <% end %>
      </div>

      <div class="flex gap-8 mt-12 justify-between items-start w-full p-8 pt-0 ">
        <div class="flex-1">
          <h3 class="text-3xl font-semibold my-5">
            <%= journal_item.title %>
          </h3>

          <p class="my-5 text-2xl">
          <%= journal_item.body %>
          </p>

          <%= render "journal_item_actions", journal_item: journal_item %>
        </div>

      </div>

    <% else %>

      <div class="flex w-full mt-20 flex-col items-center justify-center self-start gap-4 ">
        <% journal_item.pictures.each_with_index do |picture, index| %>
          <div class="sticky top-8">
            <%= image_tag journal_item.pictures_as_thumbnail(picture), class: "hover:scale-100 transition-all duration-300  -mt-8 shrink-0 #{index.odd? ? 'rotate-6' : '-rotate-6'}" %>
          </div>
        <% end %>
      </div>

      <div class="flex gap-8 mt-12 justify-between items-start w-full">
        <div class="flex-1">
        <h3 class="text-2xl font-serif font-semibold mb-5">
          <%= journal_item.title %>
        </h3>

        <p class="text-4xl font-light leading-tight font-serif">
        <%= journal_item.body %>
        </p>

          <%= render "journal_item_actions", journal_item: journal_item %>
        </div>

      </div>
    <% end %>
  <% else %>

    <div class="flex gap-4 justify-between w-full flex-col">
      <div class="max-w-2xl w-full">
        <h3 class="text-xl font-bold mb-5">
          <%= journal_item.title %>
        </h3>

        <p class="text-4xl font-light leading-tight font-serif ">
        <%= journal_item.body %>
        </p>
      </div>

      <%= render "journal_item_actions", journal_item: journal_item %>
    </div>

  <% end %>


</div>
