<%= form_with(model: todo, id: "#{dom_id(todo)}_form", class: "")  do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="mb-6">
    <%= form.label :title, class: "sr-only" %>
    <%= form.text_area :title, placeholder: "Notes", rows: 4,  autofocus: true, placeholder: "Title", class: "placeholer:text-zinc-400 border-0 rounded-md w-full p-0 focus:ring-0 focus:border-0 ring-0 bg-transparent text-3xl focus:outline-none  " %>
  </div>

  <div class="hidden">
    <%= form.label :description, class: "sr-only" %>
    <%= form.text_area :description, placeholder: "Notes", rows: 4, class: "placeholer:text-zinc-400 border-0 text-2xl rounded-md w-full p-0 focus:ring-0 focus:border-0 ring-0 bg-transparent focus:outline-none  " %>
  </div>

  <div class="text-2xl mb-6">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, class: "mt-0 text-2xl px-0.5 bg-transparent border-0 ring-0 focus:ring-0 placeholer:text-zinc-400" %>
  </div>

  <div class="flex items-center justify-between">

    <div class="mt-2 flex gap-4 w-full">

      <%= form.submit class: "rounded-full text-2xl text-white flex-1 hover:bg-orange-600 cursor-pointer font-medium bg-orange-500 px-8 py-4 duration-200 transition-all" %>

      <% if action_name == "edit" %>
        <%= button_to todo_path(todo), class: "rounded-full inline-block text-2xl  font-medium hover:bg-rose-600  bg-rose-500 text-white px-12 duration-200 transition-all py-4 text-center", method: :delete do %>
Delete
        <% end %>
      <% end %>
    </div>

  </div>

      <%= link_to "Close", todos_path, class: "rounded-full inline-block text-2xl mt-4 font-medium hover:opacity-60 w-full ring-2 ring-[#EADED0] px-8 py-3 text-center" %>
<% end %>
