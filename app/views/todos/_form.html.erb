<%= form_with(model: todo, id: "#{dom_id(todo)}_form", class: "p-6 bg-[#F4ECE2] rounded-xl")  do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :title, class: "sr-only" %>
    <%= form.text_field :title, autofocus: true, placeholder: "Title", class: "placeholer:text-zinc-400 border-0 rounded-md w-full p-0 focus:ring-0 focus:border-0 ring-0 bg-transparent text-xl focus:outline-none  " %>
  </div>

  <div class="">
    <%= form.label :description, class: "sr-only" %>
    <%= form.text_area :description, placeholder: "Notes", rows: 3, class: "placeholer:text-zinc-400 border-0 rounded-md w-full p-0 focus:ring-0 focus:border-0 ring-0 bg-transparent text-xl focus:outline-none  " %>
  </div>

  <div class="flex items-center justify-between">

    <div class="mt-2 ">
    <%= form.submit class: "rounded-full text-white hover:bg-orange-600 cursor-pointer font-medium bg-orange-500 px-8 py-2" %>

    <%= link_to "Close", todos_path, class: "rounded-full  font-medium hover:opacity-60 bg-[#EADED0] px-8 py-2" %>
    </div>

    <div class="flex gap-4">
    <% if action_name == "edit" %>
      <%= button_to todo_path(todo), class: "bg-red-600 px-4 py-2 rounded hover:bg-red-700", method: :delete do %>
        <span class="sr-only">Delete</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor" title="Delete todo">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      <% end %>
      <% end %>
    </div>

  </div>
<% end %>
