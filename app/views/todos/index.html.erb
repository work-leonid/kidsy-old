<div class="flex items-center justify-between w-full mb-12">
  <div>
    <h1 class="text-3xl">Plans</h1>
  </div>

  <div class="flex bg-[#EDE3D4] px-1 py-1 rounded-full gap-1">
    <%= link_to "Incomplete",
    todos_path(status: "incomplete"),
    class: "#{params[:status] != 'complete' ? 'bg-[#FAF4EC]' : 'bg-[#EDE3D4]'} flex-1 px-8 rounded-full py-2" %>
  <%= link_to "Complete",
    todos_path(status: "complete"),
    class: "#{params[:status] == 'complete' ? 'bg-[#FAF4EC]' : 'bg-[#EDE3D4]'} flex-1 px-8 rounded-full py-2" %>
  </div>

</div>


<div class="flex pb-32 gap-16">
  <div class="w-1/2">
    <h2 class="text-2xl mb-8 font-light">Today, <%= Date.current.strftime("%B %d") %></h2>
    <div class="flex flex-col gap-4">
      <%= render @today_todos %>
    </div>

    <h2 class="text-2xl mt-12 mb-8 font-light">Tomorrow, <%= Date.tomorrow.strftime("%B %d") %></h2>
    <div class="flex flex-col gap-4">
      <%= render @all_not_today_and_tomorrow %>
    </div>
  </div>

  <div class="w-1/2">
    <h2 class="text-2xl mb-8 font-light">All Tasks</h2>
    <div id="todos" class="flex flex-1 flex-col gap-2">
      <%= render @all_not_today %>
    </div>
  </div>

</div>


<%= link_to "New Task", new_todo_path, class: "hover:bg-orange-600 transition-all duration-300 px-16 fixed bottom-8 left-1/2 -translate-x-1/2 bg-orange-500 text-white font-medium rounded-full text-center py-3 " %>
