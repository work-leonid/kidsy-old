<% content_for(:nav) do %>
  <div class="flex bg-[#EDE3D4] text-lg px-1 py-1 rounded-full gap-1">

    <%= link_to "Today", todos_path, class: "#{params[:status] != 'complete' ? 'bg-[#FAF4EC]' : 'bg-[#EDE3D4]'} flex-1 px-8 rounded-full py-2" %>
    <%= link_to "Active",
    todos_path(status: "incomplete"),
    class: "#{params[:status] == 'complete' ? 'bg-[#FAF4EC]' : 'bg-[#EDE3D4]'} flex-1 px-8 rounded-full py-2" %>
  <%= link_to "Complete",
    todos_path(status: "complete"),
    class: "#{params[:status] == 'complete' ? 'bg-[#FAF4EC]' : 'bg-[#EDE3D4]'} flex-1 px-8 rounded-full py-2" %>
  </div>
<% end %>

<div class="flex pb-32 flex-col mx-auto max-w-3xl gap-12">
  <% unless params[:status] == "complete" %>
    <div class="">
      <% if @today_todos.any? %>
        <h2 data-current-date-target="date" data-controller="current-date" class="text-2xl mb-4">
        </h2>
        <div class="flex flex-col mb-12 gap-4">
          <%= render partial: "current_todo", collection: @today_todos, as: :todo %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="">
    <h2 class="text-2xl mb-4">All Tasks</h2>
    <div id="todos" class="flex flex-1 flex-col gap-2">
      <%= render @all_not_today %>
    </div>
  </div>

</div>


<%= link_to "New Task", new_todo_path, class: "hover:bg-orange-600 transition-all duration-300 px-24 fixed bottom-8 left-1/2 -translate-x-1/2 bg-orange-500 text-2xl text-white font-medium rounded-full text-center py-3 " %>
