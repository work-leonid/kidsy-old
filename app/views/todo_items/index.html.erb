<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>


  <h1 class="font-bold text-4xl">Todo items</h1>

  <div>
    <%= render "form", todo_item: TodoItem.new %>
  </div>

  <div id="todo_items" class="min-w-full">
    <%= render @todo_items %>
  </div>
</div>
